@model List<Dashboard.Models.Customer>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="panel panel-default" style="height:50px">
        <div style="margin-top:10px">
            <b style="margin-left:30px;margin-right:10px">Name : </b><input type="text" name="CustomerNameFilter" />
            <b style="margin-left:80px;margin-right:10px">Status : </b> <select name="VehicleStatusFilter">
                <option value="">All</option>
                <option value="true">Connected</option>
                <option value="false">Disconnected</option>
            </select>
            <input type="submit" value="Filter" />
        </div>
    </div>
}

<div style="margin-top:20px">
    @{
        foreach (var customer in Model)
        {
            @Html.Partial("CustomerView", customer);
        }
    }
</div>

